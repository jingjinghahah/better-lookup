{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2017",
        "module": "commonjs",
        "strict": true,
        "lib": [
            "es2017",
            "dom",
            "ES2020.Promise"
        ],
        "typeRoots": [
            "./src/typings",
            "./node_modules/@types"
        ],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*",
    ]
}